.message{"data-message-id": "#{message.id}"}
  .upper-info
    .message__user
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-meesage
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image, class: 'lower-message__image' if message.image.present?